<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="errorColor" format="color"/>
    <attr name="maxCharacters" format="integer"/>
    <declare-styleable name="MatchView">
        <attr name="matchViewText" format="string" />
        <attr name="matchViewTextColor" format="color" />
        <attr name="matchViewTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PullScrollView">
        <attr name="psv_header" format="reference"/>
        <attr name="psv_headerHeight" format="dimension"/>
        <attr name="psv_headerVisibleHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ProgressLayout">
        <attr name="progressLayoutProgressBackground" format="color"/>
        <attr name="progressLayoutProgress" format="boolean"/>
    </declare-styleable>
<!--

    <declare-styleable name="materialEditText">
        &lt;!&ndash; Highlight color of floating label text and underline. &ndash;&gt;
        <attr name="backgroundColor" format="color"/>
        &lt;!&ndash; Error color of under line text and underline. &ndash;&gt;
        <attr name="errorColor"/>
        &lt;!&ndash; Enable floating label text. &ndash;&gt;
        <attr name="floatingLabel" format="boolean"/>
        &lt;!&ndash; Max characters count limit. 0 means no max. &ndash;&gt;
        <attr name="maxCharacters"/>
        &lt;!&ndash; Icon (ImageView) associated to this EditText. &ndash;&gt;
        <attr name="withIcon" format="reference"/>
    </declare-styleable>
-->

    <declare-styleable name="fullwidthEditText">
        <!-- Error color of under line text and underline. -->
        <attr name="errorColor"/>
        <!-- Max characters count limit. 0 means no max. -->
        <attr name="maxCharacters"/>
    </declare-styleable>
    <declare-styleable name="MarqueeView">
        <attr name="marqueeSpeed" format="integer" />
        <attr name="pause" format="integer" />
        <attr name="autoStart" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <declare-styleable name="EditTextWithDeleteButton">
        <attr name="hintText" format="string" />
        <attr name="rightLabel" format="string" />
        <attr name="isShowDeleteBt" format="boolean" />
        <attr name="deleteButtonRes" format="reference" />
        <attr name="rightLabelStyle" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="digits" format="string" />
        <attr name="password" format="boolean" />

    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="imgSrc" format="reference" />
        <attr name="cropMode">
            <enum name="ratio_fit_image" value="0"/>
            <enum name="ratio_4_3" value="1"/>
            <enum name="ratio_3_4" value="2"/>
            <enum name="ratio_1_1" value="3"/>
            <enum name="ratio_16_9" value="4"/>
            <enum name="ratio_9_16" value="5"/>
            <enum name="ratio_free" value="6"/>
            <enum name="ratio_custom" value="7"/>
            <enum name="circle" value="8"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
        <attr name="overlayColor" format="color"/>
        <attr name="frameColor" format="color"/>
        <attr name="handleColor" format="color"/>
        <attr name="guideColor" format="color"/>
        <attr name="guideShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleSize" format="dimension"/>
        <attr name="touchPadding" format="dimension"/>
        <attr name="minFrameSize" format="dimension"/>
        <attr name="frameStrokeWeight" format="dimension"/>
        <attr name="guideStrokeWeight" format="dimension"/>
        <attr name="cropEnabled" format="boolean"/>
        <attr name="initialFrameScale" format="float"/>
    </declare-styleable>
</resources>