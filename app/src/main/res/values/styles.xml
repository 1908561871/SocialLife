<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        //整个当前Activity的字体的默认颜色。
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

  <!--  小字体-->
    <style name="sml_text_style_ww">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/sml_text_size</item>
    <item name="android:gravity">center</item>
</style>
    <!--  正常字体-->
    <style name="commen_text_style_ww">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/common_text_size</item>
    <item name="android:gravity">center</item>
</style>

    <style name="commen_text_style_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <!--  中字体-->
    <style name="mid_text_style_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  大字体-->
    <style name="big_text_style_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="linear_layout_vertical_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="linear_layout_horizontal_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sml_text_size</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="base_style_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_style_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="base_style_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_item_height</item>
        <item name="android:layout_marginTop">@dimen/verticl_margin</item>
        <item name="android:layout_marginBottom">@dimen/verticl_margin</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>


    <!--spots dialog样式-->
        <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
            <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
            <item name="DialogTitleText">Updating…</item>
            <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
            <item name="DialogSpotCount">5</item>
        </style>
</resources>
