<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout_vertical_mw">
    <RelativeLayout
        style="@style/layout_item">
        <cn.com.elex.social_life.support.view.imageview.CircleImageView
            android:id="@+id/img_icon"
            android:src="@drawable/icon_item_latest_msg_gms_friend_trend"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/base_style_ww" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:textColor="@color/primary_text"
            style="@style/commen_text_style_ww" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_alignParentRight="true"
            style="@style/sml_text_style_ww" />

        <TextView
            android:layout_toRightOf="@id/img_icon"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_descrip"
            style="@style/sml_text_style_ww" />
    </RelativeLayout>

</LinearLayout>