<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_style_mw"
    android:layout_margin="@dimen/verticl_margin"
    android:background="@drawable/btn_search_tag_normal">
    <TextView
        android:id="@+id/tv_search"
        style="@style/base_style_ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/primary"
        android:text="@string/search" />
    <ImageView
        android:id="@+id/iv_search_icon"
        style="@style/base_style_ww"
        android:layout_marginLeft="@dimen/horizontal_sml_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/search_icon" />

    <EditText
        android:layout_toLeftOf="@id/tv_search"
        android:layout_toRightOf="@id/iv_search_icon"
        android:id="@+id/et_search_content"
        style="@style/base_style_mw"
        android:layout_marginLeft="@dimen/horizontal_sml_margin"
        android:layout_marginRight="@dimen/horizontal_sml_margin"
        android:background="@drawable/search_textview_bg"
        android:textSize="@dimen/sml_text_size"
        />

</RelativeLayout>